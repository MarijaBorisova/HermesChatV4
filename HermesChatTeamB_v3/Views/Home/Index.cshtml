@model HermesChatTeamB_v3.ViewModels.LoginViewModel
<form method="post" asp-controller="Account" asp-action="Login">
	<div class="text-left">
		<div>
			<label style="color: darkolivegreen; font-size: 20px; padding-top: 20px;" asp-for="Email"></label><br />
			<input style="
				   width: 20rem; height: 3.2rem;
				   border-radius: 5px;
				   border-block-color: darkolivegreen;
				   background: white"
				   asp-for="Email" />
			<span asp-validation-for="Email"></span>
		</div>
		<div>
			<label style="color: darkolivegreen; font-size: 20px; padding-top: 20px;" asp-for="Password"></label><br />
			<input style="
				   width: 20rem; height: 3.2rem;
				   border-radius: 5px;
				   border-block-color: darkolivegreen;
				   background: white"
				   asp-for="Password" />
			<span asp-validation-for="Password"></span>
		</div>
		@*<div>
			<label asp-for="RememberMe"></label><br />
			<input asp-for="RememberMe" />
		</div>*@
		<div>
			<input asp-controller="Account" asp-action="ForgotPassword" type="submit" value="Forgot Password?" />
		</div>
	</div>
	<div>
		<input type="submit" value="Login" />
	</div>
	<div>
		<input asp-controller="Account" asp-action="Register" Register type="submit" value="Registration" />
	</div>
</form>


