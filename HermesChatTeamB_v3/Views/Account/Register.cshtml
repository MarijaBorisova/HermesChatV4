@model HermesChatTeamB_v3.ViewModels.RegisterViewModel
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/register.css" />
</head>
<body>

	<h2 class="title">New User Registration</h2>
	<div class="inputgroup">
		<form method="post" asp-controller="Account" asp-action="Register">
			<div asp-validation-summary="ModelOnly"></div>
			<div>
				<label asp-for="Email">
					<i class="fa fa-envelope" i style="color: darkblue; font-size: 20px"></i>
				</label>
				<input class="form-control" name="email" id="email" placeholder="e-mail" asp-for="Email" />
				<span asp-validation-for="Email"></span>
			</div>
			<div>
				<label asp-for="Password">
					<i class="fa fa-unlock-alt" i style="color: darkblue; font-size: 25px; padding-top:15px;"></i>
				</label>
				<input class="form-control" name="password" id="Input1" placeholder="password" asp-for="Password" />
				<input type="checkbox" onclick="myFunction1()" /> Show Password<br />
				<span asp-validation-for="Password"></span>
			</div>
			<div>
				<label asp-for="PasswordConfirm">
					<i class="fa fa-unlock-alt" i style="color: darkblue; font-size: 25px; padding-top:15px;"></i>
				</label><br />
				<input class="form-control" name="passwordconfirm" id="Input2" placeholder="confirm password" asp-for="PasswordConfirm" />
				<input type="checkbox" onclick="myFunction2()" /> Show Password<br />
				<span asp-validation-for="PasswordConfirm"></span>
			</div>
			<div>
				<input class="register" type="submit" value="Registration" />
			</div>
		</form>
	</div>

	<script>
		function myFunction1() {
			var x = document.getElementById("Input1");
			if (x.type === "password") {
				x.type = "text";
			} else {
				x.type = "password";
			}
		}
	</script>
	<script>
		function myFunction2() {
			var x = document.getElementById("Input2");
			if (x.type === "password") {
				x.type = "text";
			} else {
				x.type = "password";
			}
		}
	</script>
</body>
</html>
