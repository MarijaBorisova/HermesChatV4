<!DOCTYPE html>
<html lang="en">

@model HermesChatTeamB_v3.ViewFolder.ResetPasswordViewModel
@{
	ViewData["Title"] = "Reset Password";
}
 <head>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/resetPassword.css />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
</head>

<style>
	body {
		background-image: url("");
		background-size: cover;
		background-color: #F0F8FF;
	}
</style>
	@*<h2 class="title">Reset Password</h2>*@
	<div class="message">
		<p>In order to change your password, please enter your email address, a new password, and its confirmation.</p>
	</div>
	<style>.message {
	color: darkblue;
	font-size: 20px;
	margin-top: 30px;
	font-family: Gotham SSm A;
	margin-left: 50px;
	}
	</style>
	<div class="inputgroup">
		<style>
			.inputgroup {
				max-width: var(--wrapper-width, 450px);
				height: fit-content;
				margin-top: 30px;
				margin-bottom: 30px;
				margin-left: auto;
				margin-right: auto;
				padding-top: 30px;
				padding-left: 35px;
				padding-right: 35px;
				background: #aaccee;
				font-family: Gotham SSm A;
				font-size: 18px;
				color: black;
				vertical-align: middle;
			}
		</style>
		<form method="post">
			@*<div asp-validation-summary="All" class="text-danger"></div>*@
			<input asp-for="Code" type="hidden" />
			<div>
				@*<label asp-for="Email">
					<i class="fa fa-envelope" i style="color: darkblue; font-size: 20px"></i>
					</label>*@
				<input asp-for="Email" class="form-control" name="email" id="email" placeholder="e-mail" /><br>
				<style>
					.form-control {
						border: 1px solid darkolivegreen;
						background: #F0F8FF;
						border-radius: 5px;
						height: 30px;
						padding: 5px;
						width: 304px;
						margin-top:20px;
						margin-bottom:20px;
					}
					<span asp-validation-for="Email" class="text-danger"></span>
				</style>
			</div>
			<div>
				@*<label asp-for="Password">
					<i class="fa fa-unlock-alt" i style="color: darkblue; font-size: 25px; padding-top:15px;"></i>
					</label>*@
				<input asp-for="Password" class="form-control2" name="password" id="Input1" placeholder="password" /> <br />
				<style>
									.form-control2 {
										border: 1px solid darkolivegreen;
										background: #F0F8FF;
										border-radius: 5px;
										height: 30px;
										padding: 5px;
										width: 304px;
										margin-top:20px;
									}
								</style>
				<input type="checkbox" onclick="myFunction1()" /> Show Password <br>
				<span asp-validation-for="Password" class="text-danger"></span>
				
			</div>
			<div>
				@*<label asp-for="ConfirmPassword">
					<i class="fa fa-unlock-alt" i style="color: darkblue; font-size: 25px; padding-top:15px;"></i>
					</label><br />*@
				<input asp-for="ConfirmPassword" class="form-control3" name="confirmpassword" id="Input2" placeholder="confirm password" /> <br />
				<style>
					.form-control3 {
						border: 1px solid darkolivegreen;
						background: #F0F8FF;
						border-radius: 5px;
						height: 30px;
						padding: 5px;
						width: 304px;
						margin-top:20px;
					}
				</style>
				<input type="checkbox" onclick="myFunction2()" /> Show Password<br>
				<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				
			</div>
			<button type="submit" class="btn">Reset</button>
			<style>
				.btn {
					font-family: Gotham SSm A;
					margin-top: 25px;
					margin-bottom: 50px;
					width: 316px;
					height: 45px;
					border-width: 1px;
					border-radius: 5px;
					border-color: #ba52b7;
					background: #ffbb00;
					font-weight: normal;
					font-size: 20px;
					color: darkblue;
					letter-spacing: 1px;
				}
				.btn:hover {
					background-image: linear-gradient(to right, #93c0f7, #f5dea0, #ffd04f, #93c0f7);
					box-shadow: 0 4px 15px 0 rgba(49, 196, 190, 0.75);
				}
			</style>
		</form>
	</div>

	<script>
		function myFunction1() {
			var x = document.getElementById("Input1");
			if (x.type === "password") {
				x.type = "text";
			} else {
				x.type = "password";
			}
		}
	</script>
	<script>
		function myFunction2() {
			var x = document.getElementById("Input2");
			if (x.type === "password") {
				x.type = "text";
			} else {
				x.type = "password";
			}
		}
	</script>
</html>



