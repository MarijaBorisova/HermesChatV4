<div class="wrapper">
    <style>
        .wrapper {
            background: #aaccee;
            max-width: var(--wrapper-width, 500px);
            height: 600px;
            margin-left: auto;
            margin-right: auto;
            margin-top: 10px;
            margin-bottom: 30px;
            padding-left: 35px;
            padding-right: 35px;
            padding-top: 30px;
        }
    </style>
    <div class="inner-wrapper text center">
        <h2 class="title">Welcome to Hermes Chat</h2>
        <style>
            .title {
                text-align: center;
                padding-bottom: 15px;
                color: darkblue;
                font-family: 'Brush Script MT';
                font-size: 45px;
            }
        </style>

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <meta charset="utf-8" />
        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="inputgroup">
                <style>
                    .inputgroup {
                        background: #bbddee;
                        margin-left: 30px;
                        margin-right: 30px;
                        padding-left: 30px;
                        padding-right: 30px;
                        padding-top: 20px;
                        font-family: Gotham SSm A;
                        font-size: 18px
                    }
                </style>
                <div class="clearfix">
                    <label for="email">
                        <i class="fa fa-envelope" i style="color: darkblue; font-size: 20px"></i>
                    </label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="e-mail"
                           asp-for="Email" />
                    <span asp-validation-for="Email"></span>

                    <label for="password">
                        <i class="fa fa-unlock-alt" i style="color: darkblue; font-size: 25px; padding-top:15px;"></i>
                    </label>
                    <input type="password" class="form-control" value="" name="password" id="Input" placeholder="password"
                           asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                    <div class="click" style="padding-top:10px"></div>
                    <input type="checkbox" onclick="myFunction()" /> Show Password


                    <style>
                        .form-control {
                            border: 1px solid darkolivegreen;
                            background: #F0F8FF;
                            border-radius: 5px;
                            height: 45px;
                        }
                    </style>
                </div>

                <div class="support">
                    <style>
                        .support {
                            padding-top: 15px;
                        }
                    </style>

                    <input asp-for="RememberMe" />
                    <label asp-for="RememberMe" style="padding-right: 60px;"></label>



                    <input asp-controller="Account" asp-action="ForgotPassword"
                           ForgotPassword type="submit" value="Forgot Password?" ;
                           style="background: #bbddee; border: none;" />

                    <button type="submit" value="Login" 
                            style="margin-top: 15px;
							margin-bottom: 20px;
							width:310px; height: 45px;
							border-width:1px;
							border-radius: 5px;
							border-color: #ba52b7;
							background: #ffbb00;
							font-weight: normal;
							font-size: 20px;
							color: darkblue;
							letter-spacing: 1px;">
                        Sign In
                        
                    </button>


                    <label for="submit"> Haven`t registered yet? Click </label>
                    <input asp-controller="Account" asp-action="Register" type="submit" value="here." ;
                           style="
							background: #bbddee;
							border: none;
							font-size:20px;
							font-style: italic;
							color: darkblue;
							font-weight: bolder" />
                </div>
                <a href="#" class="fb btn" style="padding-top: 15px; padding-bottom: 40px;">
                    <i class="fa fa-facebook fa-fw"></i> Login with Facebook
                </a>
            </div>
        </form>
    </div>
</div>




@if (User.Identity.IsAuthenticated)
{
    <p>@User.Identity.Name</p>

    <form method="post" asp-controller="Account">
        <input type="submit" value="Sign Out" />
    </form>
}

