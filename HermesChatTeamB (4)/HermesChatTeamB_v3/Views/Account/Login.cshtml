<script>
    function myFunction() {
        var x = document.getElementById("Input");
        if (x.type === "password")
        {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
